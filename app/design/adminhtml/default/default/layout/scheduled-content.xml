<layout>
    <adminhtml_scheduledcontent_index>
        <reference name="content">
            <block type="scheduledContent/adminhtml_data" name="scheduledContent_data_grid_container" />
        </reference>
    </adminhtml_scheduledcontent_index>

    <adminhtml_scheduledcontent_edit>
        <reference name="content">
            <block type="scheduledContent/adminhtml_data_edit" name="scheduledContent_edit_container" />
        </reference>
    </adminhtml_scheduledcontent_edit>

    <adminhtml_scheduledcontent_grid>
        <remove name="root" />
        <block type="scheduledContent/adminhtml_data_grid" name="scheduledContent_grid" output="toHtml" />
    </adminhtml_scheduledcontent_grid>
</layout>